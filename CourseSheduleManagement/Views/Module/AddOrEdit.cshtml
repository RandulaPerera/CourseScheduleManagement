@model CourseSheduleManagement.Models.Module

@{
    ViewData["Title"] = Model.ModuleId==0?"Create Module":"Update Module";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="AddOrEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModuleId" />
            <div class="form-group">
                 <div class="row">
                    <div class="col-12">
                        <label class="control-label">Module Name</label>
                        <input  id="coursename" asp-for="ModuleName" class="form-control"/>
                        <span asp-validation-for="ModuleName" class="text-danger"></span>
                    </div>
                 </div>
                 <div class="row">
                    <div class="col-12">
                        <label class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                 </div>
                  <div class="row">
                     <div class="col-6">
                        <label class="control-label">Course</label>
                        <select id="selectCourseId" asp-for="CourseId" asp-items="ViewBag.CourseList as SelectList" class="form-control">
                            <option selected>-- Select Course --</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                 </div>
               
            </div>
            <div class="form-group">
                 <div class="row">
                    <div class="col-1">
                         <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div class="col-2">
                         <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                    <div class="col-9">

                    </div>
                 </div>
            </div>
           
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
      
      
              
</script>
}
